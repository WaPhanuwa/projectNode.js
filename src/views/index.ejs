<!DOCTYPE html>
<html>

<head>
    <title>Online Store</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 20px auto;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
            font-size: 2.5em;
        }

        .cart-link {
            display: block;
            text-align: right;
            margin-bottom: 20px;
            font-size: 1em;
            color: #007bff;
            text-decoration: none;
        }

        .cart-link:hover {
            text-decoration: underline;
        }

        .product {
            background-color: #fff;
            margin: 20px 0;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            transition: transform 0.2s, box-shadow 0.2s;
            display: flex;
            align-items: center;
        }

        .product img {
            max-width: 150px;
            margin-right: 20px;
            border-radius: 8px;
        }

        .product:hover {
            transform: scale(1.02);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }

        .product h2 {
            margin: 0 0 10px;
            font-size: 1.8em;
            color: #555;
        }

        .product p {
            margin: 5px 0;
            color: #666;
            font-size: 1em;
        }

        .product .price {
            font-size: 1.5em;
            color: #007bff;
            margin-top: 10px;
        }

        .add-to-cart {
            margin-top: 15px;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
            transition: background-color 0.2s;
        }

        .add-to-cart:hover {
            background-color: #0056b3;
        }

        footer {
            text-align: center;
            margin-top: 40px;
            padding: 20px 0;
            background-color: #333;
            color: #fff;
        }
    </style>
</head>

<body>
    <div class="container">
        <a href="/cart" class="cart-link">View Cart</a>
        <h1>Product List</h1>
        <% products.forEach(function(product, index) { %>
            <div class="product">
                <img src="/images/product<%= index + 1 %>.jpg" alt="<%= product.ProductName %>">
                <div>
                    <h2>
                        <%= product.ProductName %>
                    </h2>
                    <p>
                        <%= product.Description %>
                    </p>
                    <p class="price">Price: $<%= product.Price %>
                    </p>
                    <p>Stock: <%= product.Stock %>
                    </p>
                    <form action="/add-to-cart" method="post">
                        <input type="hidden" name="productId" value="<%= product.ProductID %>">
                        <input type="hidden" name="productName" value="<%= product.ProductName %>">
                        <input type="hidden" name="productPrice" value="<%= product.Price %>">
                        <button type="submit" class="add-to-cart">Add to Cart</button>
                    </form>
                </div>
            </div>
            <% }) %>
    </div>
    <footer>
        &copy; 2024 Online Store. All rights reserved.
    </footer>
</body>

</html>